# Sensemaker API Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sensemaker?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Server
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Google Cloud / Vertex AI (for LLM)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# File Storage (S3/GCS)
# For AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=sensemaker-uploads

# For Google Cloud Storage
# GCS_BUCKET=sensemaker-uploads
